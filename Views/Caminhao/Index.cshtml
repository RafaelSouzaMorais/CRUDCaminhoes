@model IEnumerable<CRUDCaminhoes.Models.Caminhao>

@{
    ViewData["Title"] = "Lista de caminhoes";
}

<h1>Lista de caminhoes</h1>

<p>
    <a asp-action="Create">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoFabricacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoModelo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoFabricacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoModelo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCaminhao">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdCaminhao">Detalhe</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCaminhao">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
