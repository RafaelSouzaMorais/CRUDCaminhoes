@model CRUDCaminhoes.Models.Caminhao

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Caminhao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCaminhao" />
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <select asp-for="Modelo" class="form-control">
                    <option value="FH">FH</option>
                    <option value="FM">FM</option>
                </select>
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoFabricacao" class="control-label"></label>
                <select asp-for="AnoFabricacao" class="form-control" asp-items="new SelectList(@ViewBag.AnoFabricacao)">
                    </select>
                <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoModelo" class="control-label"></label>
                <select asp-for="AnoModelo" class="form-control" asp-items="new SelectList(@ViewBag.AnosModelo)">
                    </select>
                <span asp-validation-for="AnoModelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
